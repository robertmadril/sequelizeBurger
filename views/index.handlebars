<div class="container">
  <div class="burger-container">

    <img id="burger-gif">

  </div>

  <div class="undevoured">

    <h2>Eat Da Burger</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-item devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="devoured">

    <h2>Ate Da Burger</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-item devoured=false}}
      {{/if}}
      {{/each}}
    </ul>

  </div>

  <div class="add-burger">

    <h2>Add Da Burger</h2>
    <form class="add-da-burger">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Ate Da Burger?</label><br>
        <input type="radio" name="devoured" value="1" checked> Eaten!<br>
        <input type="radio" name="devoured" value="0"> Not Eaten
      </div>

      <button type="submit">Add Da Burger</button>
    </form>

  </div>

</div>